{
  "manifest_version": 3,
  "name": "GitHub Time Tracker",
  "version": "1.0",
  "description": "Track time spent on GitHub issues",
  "permissions": ["storage", "activeTab"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://github.com/*/*/issues/*"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "src/popup/index.html"
  }
}